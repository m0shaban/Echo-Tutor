# Echo Tutor (PROJECT_APP) environment template
# Copy to .env and fill with real values (do NOT commit secrets)

# Core app
PORT=7860
ENVIRONMENT=development
FLASK_DEBUG=false
AUTH_MODE=local
AUTH_PROXY_TIMEOUT_SECONDS=15

# AI providers
AI_PROVIDER=groq
NVIDIA_API_KEY=
GROQ_API_KEY=
GROQ_API_KEYS=

# Auth / local DB
DATABASE_PATH=users.db
JWT_SECRET_KEY=replace_with_a_long_random_secret_min_32_chars
APP_ID=echo-tutor

# Central Nova integration
NOVA_API_URL=http://127.0.0.1:8000
NOVA_API_KEY=replace_with_shared_external_api_key

# Optional
EXTERNAL_URL=http://127.0.0.1:7860
